{
  "name": "ngx-lipsum-demo",
  "version": "0.0.5",
  "scripts": {
    "ng": "ng",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prepare": "husky install",
    "copy": "copyfiles -f README.md CHANGELOG.md LICENSE dist/ngx-lipsum",
    "package": "npm run build ngx-lipsum && npm run copy",
    "release": "npx standard-version && sh tools/version-sync.sh && npm run package && cd dist/ngx-lipsum && npm publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "lorem-ipsum": "^2.0.3",
    "ngx-lipsum": "^0.0.3",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.5",
    "@angular/cli": "~12.2.5",
    "@angular/compiler-cli": "~12.2.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@schuchard/prettier": "^5.1.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "commitizen": "^4.2.4",
    "commitlint": "^13.1.0",
    "copyfiles": "^2.4.1",
    "husky": "^7.0.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "lint-staged": "11.1.2",
    "ng-packagr": "^12.1.1",
    "prettier": "2.4.0",
    "standard-version": "^9.3.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "~4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
